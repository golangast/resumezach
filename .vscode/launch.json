    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            // "debugAdapter": "dlv-dap",
            "mode": "auto",
            "program": "${workspaceFolder}/src",
            "env": {},
            // "args": [
            //     "go run main.go"
            // ],
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 512,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "dlvFlags": [
                "--check-go-version=false"
            ]
        },
        }
        
    ]
}